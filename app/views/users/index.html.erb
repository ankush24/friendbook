<% provide(:title, 'All users') %>
<h1>All users</h1>

<%#= will_paginate %>

<ul class="users">
   <% @users.each do |user| %>
    <%if(user.id != current_user.id) %>
	    <li>
	      <%= gravatar_for user %>
	      <%= link_to user.email, users_show_path(user.id) %>
	    </li>
	  <% end %>
   <% end %>
</ul>

<%= will_paginate %>
